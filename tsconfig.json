{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "lib",
    //"emitDeclarationOnly": false,
    "rootDir": "src",
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    //"allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "target": "ES6",
    "outDir": "./lib",
    //"types": ["node", "jest"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/stories",
    "src/**/*.stories.tsx",
    "src/**/*.stories.ts",
  ]
}